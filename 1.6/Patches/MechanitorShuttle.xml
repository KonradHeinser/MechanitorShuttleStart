<?xml version="1.0" encoding="utf-8" ?>
<Patch>
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ScenarioDef[defName="Mechanitor"]/scenario/parts/li[@Class="ScenPart_PlayerPawnsArriveMethod"]/method</xpath>
        <value>
            <method>Standing</method>
        </value>
    </Operation>
    
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Odyssey Transport Shuttle</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>Defs/ScenarioDef[defName="Mechanitor"]/scenario/parts</xpath>
                    <value>
                        <li Class="ScenPart_ScatterThingsNearPlayerStart">
                            <def>ScatterThingsNearPlayerStart</def>
                            <thingDef>MechanitorShuttle</thingDef>
                            <count>1</count>
                        </li>
                    </value>
                </li>
                <li Class="PatchOperationConditional">
                    <xpath>Defs/ThingDef[defName="MechanitorShuttle"]/building/claimable</xpath>
                    <match Class="PatchOperationRemove">
                        <xpath>Defs/ThingDef[defName="MechanitorShuttle"]/building/claimable</xpath>
                    </match>
                </li>
            </operations>
        </match>
        <nomatch Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>Defs/ScenarioDef[defName="Mechanitor"]/scenario/parts</xpath>
                    <value>
                        <li Class="ScenPart_ScatterThingsNearPlayerStart">
                            <def>ScatterThingsNearPlayerStart</def>
                            <thingDef>PassengerShuttle</thingDef>
                            <count>1</count>
                        </li>
                    </value>
                </li>
                <li Class="PatchOperationConditional">
                    <xpath>Defs/ThingDef[defName="PassengerShuttle"]/building/claimable</xpath>
                    <match Class="PatchOperationRemove">
                        <xpath>Defs/ThingDef[defName="PassengerShuttle"]/building/claimable</xpath>
                    </match>
                </li>
            </operations>
        </nomatch>
    </Operation>
</Patch>
